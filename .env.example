# ============================================
# DATABASE
# ============================================

# PostgreSQL connection string (Railway, Supabase, or your own)
DATABASE_URL="postgresql://user:password@host:port/database"
DIRECT_URL="postgresql://user:password@host:port/database"

# ============================================
# NEXTAUTH AUTHENTICATION
# ============================================

# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-command: openssl rand -base64 32"

# ============================================
# AI SERVICE (REQUIRED FOR INVOICE OCR)
# ============================================

# Anthropic API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY="sk-ant-api03-..."

# Alternative AI providers (optional)
# AI_PROVIDER="anthropic"  # Options: "anthropic", "openai", "local"
# OPENAI_API_KEY=""

# ============================================
# EMAIL SERVICE (REQUIRED FOR VERIFICATION)
# ============================================

# Resend API Key (get from: https://resend.com/api-keys)
# Free tier: 100 emails/day, 3,000/month
RESEND_API_KEY="re_..."

# From email address (must be verified domain in Resend)
# For development, you can use onboarding@resend.dev
# For production, use your own domain
# FROM_EMAIL="SiteSense <onboarding@yourdomain.com>"

# ============================================
# APP CONFIGURATION
# ============================================

# Public app URL (used in emails for verification links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment (development, staging, production)
NODE_ENV="development"

